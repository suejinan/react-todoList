/**
* Template CSS
*/
.sidebar {
    margin: 0;
    padding: 0;
    width: 250px;
    background-color: #f1f1f1;
    position: absolute;
    height: 100%;
    overflow: auto;
    float:left;
  }

.sidebar a {
    display: block;
    color: black;
    padding: 16px;
    text-decoration: none;
}

.sidebar a.active {
    background-color: #4CAF50;
    color: white;
}

.sidebar a:hover:not(.active) {
    background-color: #555;
    color: white;
}

div.content {
    margin-left: 200px;
    padding: 20px 20px;
    width: 100%;
    height:100%;
}

/**
* Group list CSS
*/

.group-insert-form {
    border:0;
    background-color: #e0dfdf;
    float:left;
    width:80%;
    margin-right: 0.7rem;
}

.group-plus-circle {
    color: rgb(101, 177, 105);
    padding-top: 0.6rem
}

.group-form{
    margin-top: 0.5rem;
    margin-left: 0.08rem;
}

.group-list {
    margin-top: 0.5rem;
    margin-left: 0.08rem;
    background-color: #e6e6e6;
}

.top-bar {
    margin-bottom: 0;
}

.jumbotron {
    padding: 1rem 2rem;
    margin-bottom: 0rem;
}

.container {
    margin-top: 10px;
    margin-left: 50px;
    height:100px;
}

.group-item:hover {
    color: #4CAF50;
}

.group-item + .group-item {
    padding: 2px;
    border-top: 1px dashed #ffffffef;
}

.group-item-remove {
    visibility: hidden;
    color: #a8a8a8
}

.group-item:hover .group-item-remove {
    visibility: visible;
}

.fa-times-circle {
    float: right;
    padding: 5px;
}

/**
* Todo List Content CSS
*/
.todo-insert-form {
    border:0;
    background-color: #ffffff;
    float:left;
    width:50%;
}

.todo-list-box{
    width: 60%; 
    margin-top: 1rem;
    margin-bottom: 1rem;
}

.list-sub-group{
    margin-left: 2rem;
}

.mb-5, .my-5 {
    margin-bottom: 0.5rem!important;
}

.todo-item {
    background-color: rgb(233, 233, 233);
}

.todo-item:hover {
    background-color: rgb(182, 240, 185);
}

.todo-item + .todo-item {
    border-top: 1px solid #f1f3f5bb;
}

.todo-item-remove {
    visibility: hidden;
    color: #ff0000
}

.todo-item:hover .todo-item-remove {
    visibility: visible;
    float:right;
}

.fa-file-alt {
    visibility: hidden;
}

.todo-item:hover .fa-file-alt {
    visibility: visible;
    color: #707070
}

