.Backdrop {
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    position: fixed;
    background-color: #21252970;
    padding: 50px;
}

.Addmodal {
    margin: auto;
    background-color: #f8f9fa;
    border-radius: 5px;
    width: 600px;
    height: 500px;
    
    box-shadow: var(--pane-box-shadow);
  }
  
.close {
    position: relative;
    top: 10px;
    right: 10px;

}


.modalContent {
    padding: 30px 40px 0;
    margin: 0;
    height: 450px;
    width: 100%;
}

.modalFooter {
    border-top: 1px #ced4da solid;
    height: 50px;
    text-align: center;
}

.modalSave {
    height: 100%;
    border: 0;
    outline: 0;
    padding: inherit;
    background-color: #f8f9fa;
    color: #adb5bd;
}

.modalSave:hover {
    color: #495057;
}

.subItem {
    font-size: 0.8em;
}

.subForm {
    border:0;
    background-color: #f8f9fa;
}
