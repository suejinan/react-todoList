import React from 'react';

const Star = ({isImportant, onClick}) => (
    <button type="button" className="btn" onClick={onClick}>
        { 
            isImportant? <span style={{fontSize:"1.2em"}}><i className="fas fa-star"></i></span>
            : <span style={{fontSize:"1.2em"}}><i className="far fa-star"></i></span>
        }
    </button>
)

export default Star;