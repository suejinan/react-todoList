import React from 'react';

const GroupForm = ({value, onChange, onCreate, onKeyPress}) => {
    return(
        <div>
            <div class="form-group form-group-sm">
                <input className="group-insert-form form-control" value={value} onChange={onChange} onKeyPress={onKeyPress}/>
                <div>
                    <i onClick={onCreate} class="fas fa-plus-circle fa-lg group-plus-circle"></i>               
                </div>
            </div>
        </div>
    )
}

export default GroupForm;